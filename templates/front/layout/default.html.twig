<!DOCTYPE html>
<html lang="{{ app.request.getLocale() }}" {{ sonata_seo_html_attributes() }}>
    <head {{ sonata_seo_head_attributes() }}>

        {{ sonata_seo_title() }}
        {{ sonata_seo_metadatas() }}
        {{ sonata_seo_link_canonical() }}
        {{ sonata_seo_lang_alternates() }}

        <link rel="shortcut icon" href="/favicon.ico" type="image/x-icon" />
        <link rel="apple-touch-icon-precomposed" href="/apple-touch-icon.png" type="image/png" />

        {% block before_stylesheets %}{% endblock %}

        {% block stylesheets %}

            {{ encore_entry_link_tags('front/app') }}

        {% endblock %}

        {% block after_stylesheets %}{% endblock %}

    </head>
    <body class="body">

        {# {{ knp_menu_render('header', {'template': 'front/components/KnpMenuBundle/menu.html.twig'}) }} #}

        {% block before_body %}{% endblock %}

        <div id="app">
            {% block body %}{% endblock %}
        </div>

        {% block after_body %}{% endblock %}

        {% block before_javascripts %}{% endblock %}

        {% block javascripts %}

            {{ encore_entry_script_tags('front/app') }}

        {% endblock %}

        {% block after_javascripts %}{% endblock %}
        
    </body>
</html>
